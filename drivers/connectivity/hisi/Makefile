$(warning  driver $(CFG_CONNECTIVITY_HI1102_C01))
ifeq ($(CFG_CONNECTIVITY_HI1102_C01), true)
export HI1102_DRIVER_BUILTIN_PATH := $(subst ",,$(CONFIG_HI110X_DRIVER_PATH))/c01
obj-$(CONFIG_CONNECTIVITY_HI110X) += c01/
else
    ifeq ($(CFG_CONNECTIVITY_HI1102_C03), true)
    export HI1102_DRIVER_BUILTIN_PATH := $(subst ",,$(CONFIG_HI110X_DRIVER_PATH))/c03
    obj-$(CONFIG_CONNECTIVITY_HI110X) += c03/
    else
    export HI1102_DRIVER_BUILTIN_PATH := $(subst ",,$(CONFIG_HI110X_DRIVER_PATH))/c02
    obj-$(CONFIG_CONNECTIVITY_HI110X) += c02/
    endif
endif
